</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }
    .btn-edit{
        outline: none;
        border: none;;
        border-radius:5px;
        cursor: pointer;
        width: 60px;

        height: 25px;
        background-color: orange;
        ;
    }
    .btn-delete{
        outline: none;
        border: none;;
        border-radius:5px;
        cursor: pointer;
        width: 60px;

        height: 25px;
        background-color: red;
        ;
    }


</style>

<body>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
        </tr>
        <% for(let i=0;i<dataTable.length;i++){%>
            <tr>
                <td>
                    <%= dataTable[i].email%>
                </td>
                <td>
                    <%= dataTable[i].firstName%>
                </td>
                <td>
                    <%= dataTable[i].lastName%>
                </td>
                <td>
                    <%= dataTable[i].address%>
                </td>
                <td>
                    <a href="/edit" class="btn-edit" type ="button">
                        Edit
                    </a>
                    <a href="http://" class="btn-delete" type ="button">
                        Delete
                    </a>
                </td>
            </tr>
            <% }%>
    </table>

</body>

</html>